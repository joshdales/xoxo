.gameArea
  width 100vw
  display flex
  justify-content center
  align-items center
  flex-direction column
  overflow hidden

  .boardContainer
    width 70%
    align-self flex-start
    margin-left 200px

    @media screen and (max-width: 1030px)
      width 100%
      margin-left 20px

  .chat
    width 30%
    height 90vh
    margin-top 10vh
    position absolute
    top 0
    right 0
    overflow-y scroll

    @media screen and (max-width: 730px)
      display none

