.waiting
  width 100vw
  min-height 100vh
  display flex
  justify-content center
  align-items center
  flex-direction column
  background #600473

.wait-heading, .copy-link
  text-align center
  color #FFF
  font-size 2rem
  line-height 2rem
  text-align center

  @media screen and (max-width: 600px)
    font-size 1.5rem
    margin-left 20px
    margin-right 20px

.waiting-form
  padding 0
  margin 0
  width 100%
  height auto
  margin 30px 0

  .player-input
    input
      margin-left 0
      margin-bottom 20px
      align-self center

  button
    align-self center
    margin 0
    margin-bottom 20px

.copy-link
  margin-top 0
  font-size 1.5rem
  margin-bottom 50px

.link
  color #FFF
  font-size 1.8
  cursor pointer
  font-weight bolder
  align-self center

  &:hover
    color #E91E63

  @media screen and (max-width: 600px)
    font-size 1.2rem
    margin-left 20px
    margin-right 20px
