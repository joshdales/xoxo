.scoreBoard
  height 10vh
  width 100vw
  display flex
  justify-content flex-start
  align-items center
  background #600473

.players
  display flex
  width: 33%
  font-size 2.2rem
  line-height 2rem
  padding-right 20px
  padding-left 20px
  color: #FF5A09

  @media screen and (max-width: 670px)
    width: 50%
    flex-direction column
    font-size: 1.2rem

  .player
    margin-right 25px
